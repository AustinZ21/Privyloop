{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "es6"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@privyloop/core": ["./packages/core/src"],
      "@privyloop/core/*": ["./packages/core/src/*"],
      "@privyloop/enterprise": ["./packages/enterprise/src"],
      "@privyloop/enterprise/*": ["./packages/enterprise/src/*"],
      "@privyloop/web": ["./packages/web/src"],
      "@privyloop/web/*": ["./packages/web/src/*"],
      "@privyloop/extension": ["./packages/extension/src"],
      "@privyloop/extension/*": ["./packages/extension/src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}