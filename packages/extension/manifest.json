{
  "manifest_version": 3,
  "name": "PrivyLoop",
  "version": "0.1.0",
  "description": "Track and manage privacy policy changes across platforms",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "background": {
    "service_worker": "dist/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "PrivyLoop"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}